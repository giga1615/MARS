<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/captureImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/useBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/use_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reCapture"></ImageView>

    <ImageView
        android:id="@+id/reCapture"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="54dp"
        android:src="@drawable/recapture_btn"
        app:layout_constraintBottom_toBottomOf="@+id/useBtn"
        app:layout_constraintEnd_toStartOf="@+id/useBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/useBtn"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>