<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gallery_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="46dp"
        android:src="@drawable/gallery_btn"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/camera_btn"
        app:layout_constraintEnd_toStartOf="@+id/camera_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/camera_btn"
        app:pressedTranslationZ="12dp" />

    <ImageView
        android:id="@+id/camera_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="44dp"
        android:src="@drawable/camera_btn"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/skip_btn"
        app:layout_constraintEnd_toStartOf="@+id/skip_btn"
        app:layout_constraintStart_toEndOf="@+id/gallery_btn"
        app:layout_constraintTop_toTopOf="@+id/skip_btn"
        app:pressedTranslationZ="12dp" />

    <ImageView
        android:id="@+id/skip_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/skip_btn"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/camera_btn"
        app:pressedTranslationZ="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>