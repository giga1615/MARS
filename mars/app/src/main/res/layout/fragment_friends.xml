<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebedf2">

    <include
        android:id="@+id/include"
        layout="@layout/top_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="57dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:layout_editor_absoluteY="57dp">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/friends_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/corner_background"
            android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:elevation="1dp"
            android:textSize="15dp"
            android:fontFamily="@font/nanumsquare"
            android:hint="새로운 친구 검색"></com.google.android.material.textfield.TextInputEditText>

        <GridView
            android:id="@+id/ListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:numColumns="3"
            android:visibility="visible"></GridView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>